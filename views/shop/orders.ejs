<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layouts/head.ejs') %>
</head>

<body>

<%- include('../layouts/nav.ejs') %>

<div class="container pt-100">
      <div class="row mt-3">

            <div class="col-md-12">
                  <% if (orders.length > 0) { %>

                        <% orders.forEach((order) => { %>
                              <div class="card b-shadow  mt-4 border border-dark border-2 " style="margin-bottom:5rem;">

                                    <div class="card-header">
                                        Order id:#  <%= order._id%>
                                    </div>
                                    <div class="card-body">

                                        <table class="table">

                                            <thead>
                                                <tr>
                                                    <th scope="col">Image</th>
                                                    <th scope="col">Name</th>
                                                    <th scope="col">Price</th>
                                                    <th scope="col">Quantity</th>
                                                </tr>
                                            </thead>

                                            <tbody>

                                            <% order.items.forEach((item) => { %>
                                                <tr>

                                                    <td>
                                                        <img src="/img/<%= item.product.imageUrl%>" width="80" alt="">
                                                    </td>
                                                    <td><%= item.product.name %></td>
                                                    <td><%= item.product.price%> <i class="fas fa-lira-sign"></i></td>
                                                    <td><%= item.quantity%> <i class="fas fa-calculator"></i></td>
                                                </tr>
                                            <% } ) %>

                                            </tbody>

                                        </table>


                                    </div>


                                      <table class="table">

                                      <tr>
                                          <td colspan="2"><%= order.date%></td>
                                          <td >
                                              <% let total=0%>
                                              <% order.items.forEach((item) => { %>
                                                  <% item %>
                                                  <% total += (item.product.price * item.quantity) %>

                                              <% })%>
                                          </td>
                                          <td style="font-weight: bolder" class="text-center table-success">

                                              total :   <%=  total %> <i class="fas fa-lira-sign"></i>

                                          </td>
                                      </tr>

                                      </table>





                              </div>
                        <% })%>

                  <% } else { %>

                        <h1>No orders...</h1>

                  <% }%>
            </div>
      </div>
</div>


<%- include('../layouts/footer.ejs') %>